@model TaskManagerApps.Models.Users
@{
    ViewBag.Title = "Login - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="card">
        <div class="card-body" style="background-color:lightgrey;">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                if (ViewBag.LoginStatus != null)
                {
                    if (ViewBag.LoginStatus == 0)
                    {
                        <div class="alert alert-danger">Invalid login detail</div>
                    }
                }
                <div class="text-center">
                    <h2>User Login</h2>
                </div>
                <table width="100%">
                    <tr>
                        <td align="center">
                            <table class="table-condensed">
                                <tr>
                                    <td align="left">
                                        @*@Html.LabelFor(m => m.UserName)*@
                                        <label>UserName</label>
                                    </td>
                                    <td align="right">
                                        <input class="form-control" type="text" asp-for="UserName"></input>
                                        @*@Html.TextBoxFor(m => m.UserName)*@
                                        &nbsp;&nbsp;
                                        <br />
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </td>
                                </tr>

                                <tr>
                                    <td align="left">
                                        @*@Html.LabelFor(m => m.PasswordHash)*@
                                        <label>Password</label>
                                    </td>
                                    <td align="right">
                                        <input class="form-control" type="password" asp-for="PasswordHash"></input>
                                        @*@Html.EditorFor(m => m.PasswordHash, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })*@
                                        &nbsp;&nbsp;
                                        <br />
                                        @Html.ValidationMessageFor(m => m.PasswordHash)
                                    </td>
                                </tr>

                                <tr>
                                    <td colspan="2" align="center">
                                        <input type="submit" value="Login" class="btn btn-primary" />
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <br />
                            @ViewBag.ErrorMessage;
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</body>
